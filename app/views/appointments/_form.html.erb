<%= form_for @appointment do |f| %>
  <%= f.select :doctor_id, options_for_select(@doctors) %>
  <%= f.select :patient_id, options_for_select(@patients) %>
  <%= f.date_field :date, required: true, placeholder: 'Date' %>
  <%= f.time_field :time, required: true, placeholder: 'Time' %>
  <%= f.text_field :location, required: true, placeholder: 'Hospital' %>
  
  <%= f.submit nil, class:'btn lime lighten-3 black-text' %>
<% end %>

<hr />
<%= link_to 'All Doctors', doctors_path, class:'btn lime lighten-3 black-text' %> |
<%= link_to 'All Patients', patients_path, class:'btn lime lighten-3 black-text'%> |
<%= link_to 'Back', :back, class:'btn lime lighten-3 black-text' %>
